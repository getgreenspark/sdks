{
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "@typescript-eslint/ban-ts-comment": "error",
    "@typescript-eslint/consistent-type-imports": "error",
    "no-console": [
      "error",
      {
        "allow": ["error", "warn"]
      }
    ],
    "max-len": "off",
    "semi": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
